apiVersion: v1
kind: Secret
metadata:
  name: tombolo-secrets
type: Opaque
stringData:
  # Database credentials (base64 encoded)
  # To encode: echo -n 'your-value' | base64
  DB_USERNAME: root
  DB_PASSWORD: "Password"
  # Authentication secrets (base64 encoded)
  # Generate secure random strings for production:
  # openssl rand -base64 32

  JWT_SECRET: secret-here # CHANGE THIS
  JWT_REFRESH_SECRET: secret-here # CHANGE THIS
  CSRF_SECRET: secret-here # CHANGE THIS

  # OAuth 2.0 (Azure) Configuration (optional)
  # CLIENT_SECRET: ""  # Commented out - uncomment and add value if using OAuth

  # Email Configuration
  # EMAIL_PASS: ""  # Commented out - uncomment and add value if using email

  # Security Configuration
  ENCRYPTION_KEY: secret-here # CHANGE THIS

